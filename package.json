  "scripts": {
    "start": "NODE_ENV=production node build-server/index.js",
    "start:worker": "NODE_ENV=production node build-worker/index.js",
    "dev:client": "NODE_PATH=./ react-scripts start",
    "dev:server": "NODE_ENV=development nodemon server/index.js --watch server --exec babel-node",
    "dev:worker": "NODE_ENV=development nodemon worker/index.js --watch worker --exec babel-node",
    "build": "npm run build:server && npm run build:client",
    "prebuild:server": "rimraf build-server",
    "build:server": "NODE_ENV=production babel server --out-dir build-server --ignore 'test/*.js'",
    "prebuild:worker": "rimraf build-worker",
    "build:worker": "NODE_ENV=production babel worker --out-dir build-worker --ignore 'test/*.js' --ignore 'node_modules/**/*'",
    "postbuild:worker": "cp worker/package.json build-worker/package.json && cp ./cacert build-worker/cacert && cp now.json build-worker/now.json",
    "build:client": "NODE_PATH=./ react-scripts build",
    "test": "NODE_PATH=./ react-scripts test",
    "test:ci": "CI=true NODE_PATH=./ react-scripts test",
    "db:migrate": "npm run rethinkdb:migrate -- up",
    "db:drop": "npm run rethinkdb:migrate -- down",
    "db:seed": "node server/migrations/seed/index.js",
    "db:reset": "yarn run db:drop && yarn run db:migrate && yarn run db:seed",
    "rethinkdb:migrate": "rethinkdb-migrate -f ./server/migrations/config.js",
    "eject": "react-scripts eject",
    "lint:staged": "lint-staged"
  },
  "lint-staged": {
    "*.js": [
      "prettier --write --single-quote --trailing-comma es5",
      "git add"
    ]
  },
  "pre-commit": "lint:staged"
}
